{
  "compilerOptions": {
    "target": "es2017",
    "module": "CommonJS",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "strict": true,
    "outDir": "build",
    "resolveJsonModule": true,
  },
  "ts-node": {
    "esm": true, // «———— enabling ESM for ts-node
  },

  "baseUrl": ".",
  "paths": {
    "*": ["src/*"]
  }
}
